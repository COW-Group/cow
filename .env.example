# Cycles of Wealth Environment Variables Template
# Copy this file to .env.local and update values for your environment

# General Configuration
NODE_ENV=development
APP_NAME="Cycles of Wealth"
APP_VERSION=0.0.1
LOG_LEVEL=info

# API Configuration
API_URL=http://localhost:3001
API_TIMEOUT=30000
API_RATE_LIMIT=1000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cow_dev
DATABASE_POOL_SIZE=10
DATABASE_SSL=false

# Redis Configuration (Cache & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
SESSION_TIMEOUT=3600

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
BCRYPT_ROUNDS=12

# Blockchain Configuration
BLOCKCHAIN_NETWORK=polygon-mumbai
WEB3_PROVIDER_URL=https://rpc-mumbai.matic.today
POLYGON_MAINNET_RPC=https://polygon-rpc.com
POLYGON_MUMBAI_RPC=https://rpc-mumbai.matic.today

# Smart Contract Addresses (update when contracts are deployed)
TOKEN_FACTORY_CONTRACT=
GOVERNANCE_CONTRACT=
COMPLIANCE_REGISTRY_CONTRACT=
TRANSFER_CONTROLLER_CONTRACT=

# Wallet Configuration
ADMIN_WALLET_PRIVATE_KEY=your-admin-wallet-private-key
TREASURY_WALLET_ADDRESS=your-treasury-wallet-address
GAS_LIMIT=500000
GAS_PRICE=20000000000

# External Services

# PurelyMail Configuration (Email Service)
PURELYMAIL_API_KEY=your-purelymail-api-key
PURELYMAIL_DOMAIN=your-email-domain.com
FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# KYC/AML Service (e.g., Jumio, Onfido)
KYC_PROVIDER=jumio
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret
KYC_WEBHOOK_SECRET=your-webhook-secret

# Compliance Services
AML_SCREENING_API_KEY=your-aml-api-key
SANCTIONS_SCREENING_API_KEY=your-sanctions-api-key
ACCREDITATION_VERIFICATION_API_KEY=your-accreditation-api-key

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1
MAX_FILE_SIZE=10485760

# Notification Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APPLE_PUSH_KEY_ID=your-apple-push-key-id
APPLE_TEAM_ID=your-apple-team-id

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:4201
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Feature Flags
ENABLE_TRADING=true
ENABLE_GOVERNANCE=true
ENABLE_AI_ASSISTANT=true
ENABLE_MOBILE_APP=true
MAINTENANCE_MODE=false

# Third-party Integrations
DOCUSIGN_INTEGRATION_KEY=your-docusign-key
DOCUSIGN_CLIENT_ID=your-docusign-client-id
DOCUSIGN_PRIVATE_KEY=your-docusign-private-key

STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Development Tools
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_API_DOCS=true
DEBUG_MODE=true
MOCK_EXTERNAL_SERVICES=true

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/cow_test
TEST_REDIS_URL=redis://localhost:6379/1
JEST_TIMEOUT=30000

# Production-specific (leave empty in development)
DOMAIN=
SSL_CERT_PATH=
SSL_KEY_PATH=
CDN_URL=
BACKUP_S3_BUCKET=